#  ####  #    # # #    #  ####    #   #    # ###### ######

function db_uninstall_schema {
  $MYSQL "
    DROP TABLE IF EXISTS
      radacct,
      radcheck,
      radgroupcheck,
      radgroupreply,
      radreply,
      radusergroup,
      radpostauth;
  "
}

function db_uninstall_nas {
  $MYSQL "
    DROP TABLE IF EXISTS
      nas;
  "
}

function db_uninstall_cui {
  $MYSQL "
    DROP TABLE IF EXISTS
      cui;
  "
}

function db_uninstall_ippool {
  $MYSQL "
    DROP TABLE IF EXISTS
      radippool;
  "
}

function db_uninstall_wimax {
  $MYSQL "
    DROP TABLE IF EXISTS
      wimax;
  "
}

#  #####     #     #####  #######    ####### #     # #     #  #####  ####### ### ####### #     #  #####
# #     #   # #   #     # #          #       #     # ##    # #     #    #     #  #     # ##    # #     #
