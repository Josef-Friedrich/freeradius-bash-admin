#  #####  #     #  #####  #######    #        #####  #     #  #####     #    ### ####### #     #  #####

function case_db {
  VALUE="$1"
  shift 1
  VALUES="$*"

  case $VALUE in
    install)
      case_db_install $VALUES
    ;;

    uninstall)
      case_db_install $VALUES
    ;;

  esac
}

function case_db_install {

  case "$1" in
    schema)
      db_install_schema
    ;;

    nas)
      db_install_nas
    ;;

    cui)
      db_install_cui
    ;;

    ippool)
      db_install_ippool
    ;;

    wimax)
      db_install_wimax
    ;;

    all)
      db_install_schema
      db_install_nas
      db_install_cui
      db_install_ippool
      db_install_wimax
    ;;

    *)
      db_install_schema
    ;;

  esac

}

function case_db_uninstall {
  case "$1" in

    schema)
      db_uninstall_schema
    ;;

    nas)
      db_uninstall_nas
    ;;

    cui)
      db_uninstall_cui
    ;;

    ippool)
      db_uninstall_ippool
    ;;

    wimax)
      db_uninstall_wimax
    ;;

    all)
      db_uninstall_schema
      db_uninstall_nas
      db_uninstall_cui
      db_uninstall_ippool
      db_uninstall_wimax
    ;;

    *)
      db_uninstall_schema
    ;;

  esac
}

#  #####     #     #####  #######
# #     #   # #   #     # #
# #        #   #  #       #
# #       #     #  #####  #####
# #       #######       # #
# #     # #     # #     # #
#  #####  #     #  #####  #######

case "$1" in



  user)
    shift 1
    case_user $@
    ;;

  nas)
    case "$2" in
      add)
        nas_add "$3" "$4" "$5"
      ;;

      delete)
        nas_delete "$3"
      ;;

      show)
        nas_show
      ;;
    esac
    ;;

  stat)

    case "$2" in
      db)
        stat_db_table $4
      ;;

      user)

      case "$3" in
        last)
          stat_user_last
        ;;

        count)
          stat_user_count
        ;;

        log)
          stat_user_log
        ;;

      esac
      ;;

      nas)

      case "$3" in
        count)
          stat_nas_count
        ;;

      esac
      ;;

    esac
    ;;

    db)
      shift 1
      case_db "$*"
    ;;

  *)

    help
    ;;

esac



