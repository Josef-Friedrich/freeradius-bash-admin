#! /bin/bash

. /etc/freeradius-bash-admin.conf

function add_group {
  prompt_init "FÃ¼gen Sie eine neue Gruppe hinzu!"

  _prompt "TITLE"        "Titel der Gruppe"         "Test-Gruppe"
  _prompt "GROUPNAME"    "Kurzname der Gruppe"
  _prompt "DESCRIPTION"  "Beschreibung der Gruppe"

  _mysql "
    INSERT
      INTO groups (groupname,title,description)
      VALUES ('$GROUPNAME','$TITLE','$DESCRIPTION');
  "

  _mysql$MYSQL "
    SELECT *
      FROM groups
      WHERE groupname = '$GROUPNAME';
  "
}

